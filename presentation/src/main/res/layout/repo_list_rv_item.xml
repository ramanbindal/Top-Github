<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/repo_list_rv_item_repo_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:foregroundGravity="left"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/repo_list_rv_item_repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/repo_list_rv_item_repo_image"
            android:text="Repo Name"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/repo_list_rv_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repo_list_rv_item_repo_name"
            android:layout_toRightOf="@+id/repo_list_rv_item_repo_image"
            android:text="UserName" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
